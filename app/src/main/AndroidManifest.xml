<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studios.eaemenkk.cancanvas" >
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".view.activity.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LoginActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_LOGIN" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.FeedActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_FEED" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_FEED" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.FollowingActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_FOLLOWING" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_FOLLOWING" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.PostActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_POST" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_POST" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.SignUpActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_SIGN_UP" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_SIGN_UP" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.PhotoActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_PHOTO" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_PHOTO" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.CommentsActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_COMMENTS" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_COMMENTS" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.ProfileActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_PROFILE" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_PROFILE" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.PelicanvasActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_PELICANVAS" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_PELICANVAS" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.SearchActivity" >
            <intent-filter>
                <action android:name="CANCANVAS_SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="CANCANVAS_SEARCH" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_app_id" />
    </application>

</manifest>